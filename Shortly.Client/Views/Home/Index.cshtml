@{
    ViewData["Title"] = "Welcome";
}

<section class="p-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4">
                <img src="~/img/welcome-img.png" class="img-fluid" alt="" />
            </div>
            <div class="col-lg-8">
                <h1 class="display-4">Shorten your link right now!</h1>
                <p class="lead">
                    Share better link across the world!
                </p>
            </div>
        </div>
    </div>
</section>

<section class="features" id="features">
    <div class="container">
        <div class="url-shorten-feature">
            <form class="url-shorten-form" id="url-shorten-form">
                <div>
                    <input
                        type="text"
                        class="url-input"
                        placeholder="Insert your link here!"
                        autocomplete="off" />
                    <span class="alert"></span>
                </div>
                <button type="submit" class="btn btn-lg" style="">Lets do it!</button>
            </form>
            <div class="url-shorten-results"></div>
        </div>
    </div>
</section>